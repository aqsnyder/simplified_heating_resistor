FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      D;
}

dimensions      [1 1 -3 0 0 0 0];

internalField   uniform 500;

boundaryField
{
    frontAndBack
    {
        type            symmetry;
    }

    left
    {
        type            zeroGradient;
    }

    right
    {
        type            zeroGradient;
    }

    lowerWall
    {
        type            zeroGradient;
    }

    upperWall
    {
        type            zeroGradient;
    }
}

